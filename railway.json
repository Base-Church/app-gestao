{
  "$schema": "https://schema.up.railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs"]
        },
        "npm:install": {
          "dependsOn": ["setup"],
          "cmds": ["npm ci"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node src/realtime/server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}